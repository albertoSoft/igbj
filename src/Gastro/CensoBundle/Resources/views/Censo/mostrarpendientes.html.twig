                <th>Edad</th>
                
                <th>F. Ingreso</th>
                <th>Diagnostico - Medico</th>
                <th>Tipo Pac.</th>
                <th>ultima Cama</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for admisionpaciente in admisiones %}
