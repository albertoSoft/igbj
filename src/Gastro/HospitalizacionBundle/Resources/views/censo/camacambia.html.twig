{% extends "HospitalizacionBundle::layout.html.twig"%}
{% set titulo="Cambio de estado de la cama" %}

{% block title  %}
    {{ titulo }}
{% endblock %}

{% block cabecera_principal  %}
    {{ titulo }}
{% endblock %}

{% block contenido  %}
    <table class="records_list">
        <thead>
            <tr>
                <th>Nº</th>
                <th>Pasos a seguir</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            <tr >
                <td style="vertical-align: middle;">1</td>
                <td style="vertical-align: middle;">SI LA CAMA AHORA ESTA VACIA</td>
                <td>
                    <form method="GET" action="{{ path('censo_paciente_pendiente',{'cama_id':cama_id}) }}">
                        <input type="button" value="LIBERAR CAMA" onclick='if(confirm("Esta seguro que esta cama esta libre?")){this.form.submit()}' />
                    </form>
                </td>
                
            </tr>
            <tr>
                <td style="vertical-align: middle;">2</td>
                <td style="vertical-align: middle;">SI HAY UN NUEVO OCUPANTE EN ESTA CAMA</td>
                <td>
                    <form method="GET" action="{{ path('censo_paciente', {'cama_id': cama_id}) }}">
                        <input type="submit" value="REGISTRAR OTRO PACIENTE EN CAMA"  />
                    </form>
                </td>
                
            </tr>
        </tbody>
    </table>
{% endblock  %}