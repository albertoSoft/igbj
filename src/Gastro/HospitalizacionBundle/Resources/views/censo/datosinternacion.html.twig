                <td> <a href="{{ path('datos_internacion_ingresapor',{'admisionpaciente_id':admisionpaciente.id}) }}"> {{ingreso}}</a> </td>
                <td> <a href="{{ path('datos_internacion_servicio',{'admisionpaciente_id':admisionpaciente.id}) }}"> {{servicio }}</a> </td>
